<div class="container">

  <h1><%= @task.title %></h1>

  <h3><%= @task.details %></h3>

  <% if @task.completed %>
    <i class="fa fa-check-square-o" aria-hidden="true"> This task is completed</i>
  <% else %>
    <i class="fa fa-square-o" aria-hidden="true"> This task is not completed yet</i>
  <% end %>
  <br>

  <%= link_to "Edit this task", edit_task_path(@task) %>
  <br>

  <i class="fa fa-step-backward" aria-hidden="true"></i>
  <%= link_to "Back to list", tasks_path %>

</div>

